		http://mods.simplemachines.org/docs/manual-install.php

 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>smf:smf-1.1.13</id>
	<name>SMF 1.0.21 / 1.1.13 Update</name>
	<version>1.0</version>

	<type>modification</type>

	<install for="1.1.12">
		<readme type="inline">
			This patch file will update your forum to SMF 1.1.13.
		</readme>
		<modification type="file" format="boardmod">smf_1-1-12_to_1-1-13_patch.mod</modification>
		<modification type="file" format="xml">smf_1-1-13_can_fail.xml</modification>
	</install>
	<install for="1.0.20">
		<readme type="inline">
			This patch file will update your forum to SMF 1.0.21.
		</readme>
		<modification type="file" format="boardmod">smf_1-0-20_to_1-0-21_patch.mod</modification>
		<modification type="file" format="xml">smf_1-0-21_can_fail.xml</modification>
	</install>
	<uninstall for="1.1.13">
		<readme type="inline">
			This will downgrade your forum back to SMF 1.1.12.
		</readme>
		<modification type="file" format="boardmod" reverse="true">smf_1-1-12_to_1-1-13_patch.mod</modification>
		<modification type="file" format="xml" reverse="true">smf_1-1-13_can_fail.xml</modification>
	</uninstall>
	<uninstall for="1.0.21">
		<readme type="inline">
			This will downgrade your forum back to SMF 1.0.20.
		</readme>
		<modification type="file" format="boardmod" reverse="true">smf_1-0-20_to_1-0-21_patch.mod</modification>
		<modification type="file" format="xml" reverse="true">smf_1-0-21_can_fail.xml</modification>
	</uninstall>
</package-info>
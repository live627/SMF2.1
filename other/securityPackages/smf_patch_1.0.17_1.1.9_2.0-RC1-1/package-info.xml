		http://mods.simplemachines.org/docs/manual-install.php

 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>smf:smf-1.1.9</id>
	<name>SMF 1.0.17 / 1.1.9 / 2.0 RC1 Update</name>
	<version>1.0</version>

	<type>modification</type>

	<install for="1.1.8">
		<readme type="inline">
			This patch file will update your forum to SMF 1.1.9.
		</readme>
		<modification type="file" format="boardmod">smf_1-1-8_to_1-1-9_patch.mod</modification>
		<modification type="file" format="xml">smf_1-1-9_can_fail.xml</modification>

		<code>updateDatabase.php</code>
		<modification type="file" format="boardmod">smf_1-1-8_to_1-1-9_attachment_patch.mod</modification>
	</install>
	<install for="1.0.16">
		<readme type="inline">
			This patch file will update your forum to SMF 1.0.17.
		</readme>
		<modification type="file" format="boardmod">smf_1-0-16_to_1-0-17_patch.mod</modification>
		<modification type="file" format="xml">smf_1-0-17_can_fail.xml</modification>
		<code>updateDatabase.php</code>
	</install>
	<install for="2.0 RC1">
		<readme type="inline">
			This patch file will update your forum to SMF 2.0 RC1-1.
		</readme>
		<modification type="file" format="boardmod">smf_2-0-RC1_to_2-0-RC1-1_patch.mod</modification>
		<modification type="file" format="xml">smf_2-0-RC1-1_can_fail.xml</modification>

		<database>updateDatabase.php</database>
	</install>
	<uninstall for="1.1.9">
		<readme type="inline">
			This will downgrade your forum back to SMF 1.1.8.
		</readme>
		<modification type="file" format="boardmod" reverse="true">smf_1-1-8_to_1-1-9_patch.mod</modification>
		<modification type="file" format="xml" reverse="true">smf_1-1-9_can_fail.xml</modification>

		<modification type="file" format="boardmod" reverse="true">smf_1-1-8_to_1-1-9_attachment_patch.mod</modification>
	</uninstall>
	<uninstall for="1.0.17">
		<readme type="inline">
			This will downgrade your forum back to SMF 1.0.16.
		</readme>
		<modification type="file" format="boardmod" reverse="true">smf_1-0-16_to_1-0-17_patch.mod</modification>
		<modification type="file" format="xml" reverse="true">smf_1-0-17_can_fail.xml</modification>

	</uninstall>
	<uninstall for="2.0 RC1-1">
		<readme type="inline">
			This will downgrade your forum back to SMF 2.0 RC1.
		</readme>
		<modification type="file" format="boardmod" reverse="true">smf_2-0-RC1_to_2-0-RC1-1_patch.mod</modification>
		<modification type="file" format="xml" reverse="true">smf_2-0-RC1-1_can_fail.xml</modification>
	</uninstall>
</package-info>
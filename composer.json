{
    "name": "simplemachines/smf",
    "repositories": [
        {
            "url": "https://github.com/SimpleMachines/BuildTools.git",
            "type": "vcs"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "simplemachines/build-tools": "dev-master",
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PHPTDD\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --dry-run --verbose --show-progress=dots",
        "lint-fix": "php-cs-fixer fix --verbose --show-progress=dots",
        "phpcs": "phpcs --standard=coding-standards/SMF ./Sources/tasks",
        "phpcbf": "phpcbf --standard=coding-standards/SMF ./Sources/tasks",
        "phpstan": "phpstan analyze"
    }
}